<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane fx:id="mainPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="th.skyousuke.gw2utility.controller.MainPageController">
    <center>
        <TabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab closable="false" text="Overview">
                    <content>
                        <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                            </rowConstraints>
                            <children>
                                <Label fx:id="welcomeLabel" text="Welcome, Anonymous!" />
                            </children>
                        </GridPane>
                    </content>
                </Tab>
                <Tab closable="false" text="Character">
                    <content>
                        <fx:include fx:id="characterTab" source="characterTab.fxml"/>
                    </content>
                </Tab>
                <Tab closable="false" text="Bank &amp; Material">
                    <content>
                        <fx:include fx:id="bankAndMaterialTab" source="bankAndMaterialTab.fxml"/>
                    </content>
                </Tab>
                <Tab closable="false" text="Wallet">
                    <content>
                        <fx:include fx:id="walletTab" source="walletTab.fxml"/>
                    </content>
                </Tab>
                <Tab closable="false" text="Trading Post">
                    <content>
                        <fx:include fx:id="tradingPostTab" source="tradingPostTab.fxml"/>
                    </content>
                </Tab>
                <Tab closable="false" text="Change">
                    <content>
                        <fx:include fx:id="changeTab" source="changeTab.fxml"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="updateStatusLabel" alignment="CENTER_RIGHT" text="Update Status Label" />
                <Button fx:id="updateButton" onAction="#handleUpdateButton" text="Update"/>
                <Button fx:id="saveButton" text="Save Data" onAction="#handleSaveDataButton"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" top="5.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
