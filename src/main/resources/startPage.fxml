<GridPane alignment="center" hgap="10" stylesheets="@style.css" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="th.skyousuke.gw2utility.controller.StartPageController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <TextField fx:id="apiKeyField" maxWidth="210.0" minWidth="210.0" prefWidth="210.0" promptText="API Key" />
        <Button fx:id="loginButton" disable="true" maxWidth="150.0" minWidth="150.0" onAction="#handleLoginButton" prefWidth="150.0" text="Login" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        <VBox spacing="5.0" GridPane.rowIndex="1">
            <children>
                <CheckBox fx:id="rememberCheckbox" onAction="#handleRememberCheckBox" text="Remember Me" />
                <Label fx:id="promptLabel" managed="false" textFill="RED" visible="false" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
