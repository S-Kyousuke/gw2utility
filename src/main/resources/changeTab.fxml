<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane fx:id="mainPane" hgap="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="th.skyousuke.gw2utility.controller.ChangePageController">
    <HBox alignment="CENTER_LEFT" GridPane.columnSpan="2">
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
    </HBox>
    <Label text="Item Change" GridPane.rowIndex="0">
        <padding>
            <Insets bottom="5.0" />
        </padding>
    </Label>
    <Label text="Wallet Change" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <padding>
            <Insets bottom="5.0" />
        </padding>
    </Label>
    <fx:include fx:id="itemChangeTableView" source="itemTable.fxml" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
    <fx:include fx:id="walletChangeTableView" source="walletTable.fxml" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
    <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <Label fx:id="referenceDataLabel" text="Reference data: Initializing references data..." />
        <Button fx:id="referenceDataButton" disable="true" onAction="#handleSetReferenceDataButton" text="Set Reference" />
        <padding>
            <Insets top="5.0" />
        </padding>
    </HBox>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
